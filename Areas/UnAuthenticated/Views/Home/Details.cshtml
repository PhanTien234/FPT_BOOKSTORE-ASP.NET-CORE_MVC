@model FPT_BOOKSTORE.Models.Cart

<form method="post">
    <input hidden asp-for="BookId"/>
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary">@Model.Book.Title</h1>
                    <p class="text-warning">by @Model.Book.Author</p>
                </div>
                <div class="col-12 col-md-6 text-md-right pt-4">
                    <span class="badge badge-warning pt-2" style="height:30px;">@Model.Book.Category.Name</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                                <div class="p-1 col-2 bg-secondary">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>@Model.Book.Price.ToString("C")</div>
                                </div>
                            </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Book.Description)</p>
                            </div>
                            <div class="row pl-2">
                                <div class="col-2 text-primary">
                                    <h4>Count</h4>
                                </div>
                                <div class="col-10">
                                    <input min="1" class="form-control" asp-for="Count"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Book.ImgUrl" width="100%" class="rounded"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Index" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Back to List</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary btn-square btn-lg form-control" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>