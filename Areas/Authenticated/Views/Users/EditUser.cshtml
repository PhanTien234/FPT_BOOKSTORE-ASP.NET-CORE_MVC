@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FPT_BOOKSTORE.Models.User

<div class="book-container">
    <div class="book-detail-header">
        <h1>Edit Admin</h1>
    </div>
    <form method="post">
        <input asp-for="Id" class="form-control" hidden>
        <div class="form-group" style="padding: 3px 20px">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-control">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group" style="padding: 3px 20px">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group" style="padding: 3px 20px">
            <label asp-for="HomeAddress" class="form-label"></label>
            <input asp-for="HomeAddress" class="form-control">
            <span asp-validation-for="HomeAddress" class="text-danger"></span>
        </div>
        <div class="form-group" style="padding: 5px 20px">
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
            <button type="submit" class="btn" style="color: #fff;background: #346184">submit</button>
        </div>
    </form>
</div>